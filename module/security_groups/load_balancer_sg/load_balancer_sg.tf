resource "aws_security_group" "load_balancer_security_group" {
  vpc_id = "${var.VPC_ID}"

  ingress {
    from_port        = 80
    to_port          = 80
    protocol         = "tcp"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }

  egress {
    from_port        = 0
    to_port          = 0
    protocol         = "-1"
    cidr_blocks      = ["0.0.0.0/0"]
    ipv6_cidr_blocks = ["::/0"]
  }
  tags = {
    Name        = "${var.APP_NAME}-sg"
    Environment = "${var.APP_ENVIRONMENT}"
  }
}
